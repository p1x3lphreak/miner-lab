[Unit]
Description=XMRig Watchdog Monitor
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=minerlab
WorkingDirectory=/opt/miner-lab
ExecStart=/opt/miner-lab/venv/bin/python3 /opt/miner-lab/scripts/xmrig-watchdog.py
Restart=always
RestartSec=30
StandardOutput=append:/var/log/miner-lab/xmrig-watchdog.log
StandardError=append:/var/log/miner-lab/xmrig-watchdog.err
TimeoutStopSec=10

[Install]
WantedBy=multi-user.target