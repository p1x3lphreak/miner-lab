[Unit]
Description=XMRig Summary Notifier
After=network-online.target miner-syncd.service
Wants=network-online.target

[Service]
Type=oneshot
User=minerlab
WorkingDirectory=/opt/miner-lab
EnvironmentFile=/etc/miner-lab/.env
ExecStart=/opt/miner-lab/venv/bin/python3 /opt/miner-lab/scripts/xmrig-summary.py
StandardOutput=append:/var/log/miner-lab/xmrig-summary.log
StandardError=append:/var/log/miner-lab/xmrig-summary.err
TimeoutSec=60

[Install]
WantedBy=multi-user.target